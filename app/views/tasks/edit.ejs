<div class="page-header">
  <h1>Edit task</h1>
</div>

<% form_for(task, {action: path_to.task(task), method: 'PUT', id: "task_form"}, function (form) { %>
  <%- partial('tasks/form.ejs', {locals: {form: form, task: task}}) %>
  <div class="actions">
    <%- form.submit('Update task', {class: 'btn primary'}) %> or
    <%- link_to('Cancel', path_to.task(task), {class: 'btn'}) %>
  </div>
<% });%>
